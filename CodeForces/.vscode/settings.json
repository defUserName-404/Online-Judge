{
    "[cpp]": {
        "editor.wordBasedSuggestions": false,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true
    },
    
    // "code-runner.cwd": "{D:\\Programming\\Shared\\CP Solutions\\CodeForces",
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.defaultLanguage": "cpp",
    "code-runner.runInTerminal": true,
    // "code-runner.customCommand": "g++ -std=c++17 {$file} -o {$fileBasenameNoExtension}.exe && time ./{$fileBasenameNoExtension}",
    "code-runner.showExecutionMessage": false,

    "files.associations": {
        "ratio": "cpp",
        "xiosbase": "cpp",
        "iostream": "cpp",
        "valarray": "cpp",
        "TT.C": "cpp",
        "vector": "cpp",
        "algorithm": "cpp",
        "cmath": "cpp",
        "utility": "cpp",
        "xstring": "cpp",
        "unordered_map": "cpp"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    }
}